<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/urlTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="url"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="275dp"
        android:layout_height="59dp"
        android:text="Load Character Sheet"
        app:layout_constraintEnd_toEndOf="@+id/urlTextBox"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="@+id/urlTextBox"
        app:layout_constraintTop_toBottomOf="@+id/urlTextBox" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paste URL to Character Sheet"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/urlTextBox"
        app:layout_constraintEnd_toEndOf="@+id/urlTextBox"
        app:layout_constraintStart_toStartOf="@+id/urlTextBox" />


</androidx.constraintlayout.widget.ConstraintLayout>